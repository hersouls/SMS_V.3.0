  "scope": "/",
  "lang": "ko",
  "dir": "ltr",
  "categories": ["productivity", "finance", "business"],
  "icons": [
    {
      "src": "/moonwave.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/Moonwave_2.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/Moonwave_2.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "구독 추가",
      "short_name": "추가",
      "description": "새로운 구독 서비스 추가",
      "url": "/add",
      "icons": [{ "src": "/Moonwave_2.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "구독 관리",
      "short_name": "관리", 
      "description": "기존 구독 서비스 관리",
      "url": "/dashboard",
      "icons": [{ "src": "/Moonwave_2.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "통계",
      "short_name": "통계",
      "description": "구독 통계 및 분석",
      "url": "/statistics",
      "icons": [{ "src": "/Moonwave_2.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "설정",
      "short_name": "설정", 
      "description": "앱 설정 및 환경설정",
      "url": "/settings",
      "icons": [{ "src": "/Moonwave_2.png", "sizes": "96x96", "type": "image/png" }]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "protocol_handlers": [
    {
      "protocol": "web+moonwave",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ]
}