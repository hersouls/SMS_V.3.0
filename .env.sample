# ==============================================
# SMS V2.0 환경 변수 설정 파일 샘플
# ==============================================

# Supabase Configuration
# ----------------------
# Supabase 프로젝트 URL (Dashboard에서 확인)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anonymous Key (Public API Key)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (서버 전용 - 절대 클라이언트에 노출하지 말 것!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Google OAuth Configuration
# ---------------------------
# Google Cloud Console에서 생성한 OAuth 2.0 클라이언트 ID
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google OAuth 클라이언트 시크릿 (서버 전용)
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Application Configuration
# --------------------------
# 애플리케이션 기본 URL
VITE_APP_URL=https://sub.moonwave.kr

# 애플리케이션 이름
VITE_APP_NAME=SMS V.2.0

# 애플리케이션 버전
VITE_APP_VERSION=2.0.0

# 허용된 CORS 오리진 (쉼표로 구분)
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://sub.moonwave.kr,https://www.sub.moonwave.kr

# Development Configuration
# --------------------------
# 개발 모드 활성화
VITE_DEV_MODE=true

# 디버그 로그 활성화
VITE_ENABLE_DEBUG=true

# S3 Storage Configuration (Supabase Storage 대신 사용하는 경우)
# ----------------------------------------------------------------
# S3 호환 엔드포인트
SUPABASE_S3_ENDPOINT=your-s3-endpoint-url

# S3 지역
SUPABASE_S3_REGION=ap-northeast-2

# S3 액세스 키 ID
SUPABASE_S3_ACCESS_KEY_ID=your_s3_access_key_id

# S3 시크릿 액세스 키
SUPABASE_S3_SECRET_ACCESS_KEY=your_s3_secret_access_key

# Additional Configuration
# -------------------------
# JWT 시크릿 (필요한 경우)
JWT_SECRET=your_jwt_secret_here

# 세션 만료 시간 (초)
SESSION_TIMEOUT=3600

# API 요청 제한 (분당 요청 수)
API_RATE_LIMIT=100

# ==============================================
# 주의사항:
# 1. 이 파일은 .gitignore에 포함되어야 합니다
# 2. 프로덕션 환경에서는 환경 변수를 직접 설정하세요
# 3. SERVICE_ROLE_KEY는 절대 클라이언트에 노출하지 마세요
# 4. 실제 값으로 교체 후 .env로 이름을 변경하세요
# ==============================================