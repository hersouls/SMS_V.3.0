{
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-filesystem/dist/index.js"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "git": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "database": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-database"],
      "env": {
        "NODE_ENV": "development",
        "DATABASE_URL": "your-database-url"
      }
    },
    "testing": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-testing"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "github-repo-manager": {
      "command": "node",
      "args": ["scripts/github-repo-manager.js"],
      "env": {
        "NODE_ENV": "development",
        "GITHUB_CLI_PATH": "C:\\Program Files\\GitHub CLI\\gh.exe"
      }
    }
  },
  "analysis": {
    "codeQuality": {
      "enabled": true,
      "complexityThreshold": 10,
      "maintainabilityIndex": 65
    },
    "security": {
      "enabled": true,
      "vulnerabilityScan": true,
      "dependencyAudit": true
    },
    "performance": {
      "enabled": true,
      "bundleAnalysis": true,
      "lighthouseAudit": true
    }
  },
  "github": {
    "enabled": true,
    "cliPath": "C:\\Program Files\\GitHub CLI\\gh.exe",
    "features": {
      "repoManagement": true,
      "issueTracking": true,
      "pullRequestManagement": true,
      "branchManagement": true,
      "releaseManagement": true
    }
  }
} 