{
  "mcpServers": {
    "tailwind-css": {
      "command": "npx",
      "args": ["tailwindcss", "-i", "./styles/globals.css", "-o", "./dist/output.css", "--watch"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "tailwind-analyze": {
      "command": "npx",
      "args": ["tailwindcss", "-i", "./styles/globals.css", "--analyze"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "tailwindConfig": {
    "configPath": "./tailwind.config.js",
    "contentPaths": [
      "./pages/**/*.{ts,tsx}",
      "./components/**/*.{ts,tsx}",
      "./app/**/*.{ts,tsx}",
      "./src/**/*.{ts,tsx}",
      "./*.{ts,tsx}"
    ],
    "outputPath": "./dist/output.css",
    "watchMode": true,
    "minify": false,
    "analyze": false
  },
  "plugins": {
    "forms": true,
    "typography": true,
    "aspect-ratio": true,
    "line-clamp": true,
    "animate": true
  },
  "utilities": {
    "debugScreens": true,
    "glassmorphism": true,
    "koreanTypography": true,
    "phaseColors": true,
    "enhancedButtons": true,
    "touchTargets": true,
    "keyboardNavigation": true
  }
} 